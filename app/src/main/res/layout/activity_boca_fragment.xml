<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="--------------------------------------------------------------------------------------" />

        <TextView
            android:layout_marginTop="4dp"
            android:textColor="#F2372C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/headland_one"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="About BOCA (Branch Organizational Capacity Assessment)"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="--------------------------------------------------------------------------------------" />

        <com.codesgood.views.JustifiedTextView
            android:layout_marginRight="10dp"
            android:lineSpacingMultiplier="1.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto"
            android:text="The Branch Organizational Capacity Assessment (BOCA) is a self-assessment tool developed for branches of Red Cross and Red Crescent Societies to identify and assess their strengths and weakness in relation to a wide range of organizational capacities. It is focusing on basic capacities, structures and conditions that are widely understood as being the core of what a branch needs to be able to function and perform well. "/>

        <com.codesgood.views.JustifiedTextView
            android:layout_marginRight="10dp"
            android:lineSpacingMultiplier="1.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto"
            android:text="BOCA is not about testing or examining the branch, but rather to identify â€“ through a self-assessment exercise- the current capacity of the branch, and agree on areas for further enhancement."/>

        <com.codesgood.views.JustifiedTextView
            android:lineSpacingMultiplier="1.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto"
            android:text="The BOCS is related to the OCAC (Organizational Capacity Assessment and Certification) tool of the International Federation of Red Cross and Red Crescent Societies (IFRC) that supports National Societies (NS) to become strong and sustainable service providers."/>


        <TextView
            android:textColor="#F2372C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/headland_one"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="Outcomes"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="------------------------------------" />

        <com.codesgood.views.JustifiedTextView
            android:lineSpacingMultiplier="1.3"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto"
            android:text="To appreciate organizational capacities of the district /taluka branches and how it is currently performing"/>

        <com.codesgood.views.JustifiedTextView
            android:lineSpacingMultiplier="1.3"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto"
            android:text="To reach a consensus on priorities for branch enhancement."/>

    </LinearLayout>


</ScrollView>